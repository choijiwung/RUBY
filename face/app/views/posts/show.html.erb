<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<div id="comments">
<%= form_tag "/posts/#{@post.id}/create_comment", method: :get, remote: true do %>
  <div><%= text_field_tag :content %></div>
  <%= submit_tag :write %>
<% end %>
</div>
